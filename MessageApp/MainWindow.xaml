<Window x:Class="MessageApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessageApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tb_header" HorizontalAlignment="Left" Height="23" Margin="75,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" MaxLength="10"/>
        <TextBox x:Name="tb_body" HorizontalAlignment="Left" Height="118" Margin="75,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" AcceptsReturn="True" Text="" MaxLength="156"/>
        <Label x:Name="label" Content="Header" HorizontalAlignment="Left" Margin="22,17,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Body" HorizontalAlignment="Left" Margin="22,49,0,0" VerticalAlignment="Top"/>
        <Button x:Name="bt_save" Content="Save" HorizontalAlignment="Left" Margin="192,182,0,0" VerticalAlignment="Top" Width="75" Click="Bt_save_Click"/>
        <Label x:Name="error_header" Content="" HorizontalAlignment="Left" Margin="244,17,0,0" VerticalAlignment="Top" Width="280" FontSize="10"/>
        <TextBox x:Name="tb_id" HorizontalAlignment="Left" Height="23" Margin="75,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" IsReadOnly="True"/>
        <TextBox x:Name="tb_sender" HorizontalAlignment="Left" Height="23" Margin="75,263,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" IsReadOnly="True"/>
        <TextBox x:Name="tb_message" HorizontalAlignment="Left" Height="106" Margin="75,291,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" IsReadOnly="True"/>
        <Label x:Name="label1" Content="Id:" HorizontalAlignment="Left" Margin="22,233,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1_Copy" Content="Message" HorizontalAlignment="Left" Margin="15,291,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1_Copy1" Content="sender" HorizontalAlignment="Left" Margin="15,264,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lb_trendList" HorizontalAlignment="Left" Height="118" Margin="348,59,0,0" VerticalAlignment="Top" Width="130"/>
        <ListBox x:Name="lb_mentionList" HorizontalAlignment="Left" Height="118" Margin="520,59,0,0" VerticalAlignment="Top" Width="130"/>

    </Grid>
</Window>
